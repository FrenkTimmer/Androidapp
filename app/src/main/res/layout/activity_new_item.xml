<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:text="@string/new_item_title_label"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:labelFor="@+id/edit_item_title"/>

<EditText
    android:id="@+id/new_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/textView2"
    tools:layout_editor_absoluteY="@+id/textView2"
    android:inputType="text"
    android:layout_marginTop="40dp"/>

<TextView
    android:id="@+id/textView3"
    android:text="@string/new_item_description_label"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="112dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintStart_toStartOf="@+id/new_item_title"
    app:layout_constraintTop_toTopOf="@+id/new_item_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:labelFor="@+id/editText"/>

<EditText
    android:id="@+id/new_item_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/textView3"
    tools:layout_editor_absoluteY="@+id/textView3"
    android:layout_marginTop="50dp"
    android:inputType="text" />

<Button
    android:id="@+id/new_item_add"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/new_item_add_button"
    app:layout_constraintTop_toTopOf="@+id/new_item_description"
    tools:layout_editor_absoluteY="@+id/new_item_description"
    android:layout_marginTop="50dp"/>


</android.support.constraint.ConstraintLayout>